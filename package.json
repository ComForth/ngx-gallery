{
  "name": "@kolkov/ngx-gallery",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build-prod": "ng build --prod",
    "test": "ng test",
    "lint:lib": "ng lint @kolkov/ngx-gallery",
    "e2e": "ng e2e",
    "build-watch:lib": "ng build @kolkov/ngx-gallery --watch",
    "test:lib": "ng test @kolkov/ngx-gallery",
    "build:lib": "ng build --prod @kolkov/ngx-gallery",
    "publish:lib": "npm run copy:readme && npm run copy:changelog && npm run copy:license && npm publish ./dist/gallery",
    "copy:readme": "cpx README.md dist/gallery",
    "copy:changelog": "cpx CHANGELOG.md dist/gallery",
    "copy:license": "cpx LICENSE dist/gallery",
    "test-ci": "ng test @kolkov/ngx-gallery --code-coverage --no-watch --browsers=ChromeHeadless && cat ./coverage/gallery/lcov.info | coveralls"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~13.0.0",
    "@angular/common": "~13.0.0",
    "@angular/compiler": "~13.0.0",
    "@angular/core": "~13.0.0",
    "@angular/forms": "~13.0.0",
    "@angular/platform-browser": "~13.0.0",
    "@angular/platform-browser-dynamic": "~13.0.0",
    "@angular/router": "~13.0.0",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "rxjs": "^6.5.4",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.1",
    "@angular-eslint/builder": "13.0.0-alpha.0",
    "@angular-eslint/eslint-plugin": "13.0.0-alpha.0",
    "@angular-eslint/eslint-plugin-template": "13.0.0-alpha.0",
    "@angular-eslint/schematics": "13.0.0-alpha.0",
    "@angular-eslint/template-parser": "13.0.0-alpha.0",
    "@angular/cli": "^13.0.1",
    "@angular/compiler-cli": "~13.0.0",
    "@angular/language-service": "~13.0.0",
    "@types/jasmine": "~3.10.2",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "coveralls": "^3.1.1",
    "cpx": "^1.5.0",
    "eslint": "^8.2.0",
    "jasmine-core": "~3.10.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.8",
    "karma-coverage": "~2.0.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^13.0.3",
    "protractor": "~7.0.0",
    "ts-node": "~10.4.0",
    "typescript": "4.4.4"
  }
